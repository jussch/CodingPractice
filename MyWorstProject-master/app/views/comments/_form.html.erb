<form action="<%= comments_url %>" method="post">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="comment[commentable_id]" value="<%= co_id %>">
  <input type="hidden" name="comment[commentable_type]" value="<%= co_type %>">

  <label>Create a New Comment<br>
    <textarea name="comment[body]" rows="8" cols="50"></textarea>
  </label>
  <br>

  <input type="submit">

</form>
