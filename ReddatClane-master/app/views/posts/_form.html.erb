<%= token_tag form_authenticity_token %>

<label>Post title <br>
  <input type="text" name="post[title]" value="<%= @post.title %>">
</label><br>

<label>Link (optional)<br>
  <input type="text" name="post[url]" value="<%= @post.url %>">
</label><br>

<label>Content (optional)<br>
  <textarea name="post[content]" rows="8" cols="40"><%= @post.content %></textarea>
</label><br>

<label>Pick subreddat(s)!<br>
  <input type="hidden" name="post[sub_ids][]" value="">
  <% Sub.all.each do |sub| %>
  <label> <%= sub.title %>
  <input type="checkbox" name="post[sub_ids][]"
  value="<%= sub.id %>" <%= "checked" if @post.sub_ids.include?(sub.id)%>>
  </label>
  <% end %>
</label>

<br>

<input type="submit">
